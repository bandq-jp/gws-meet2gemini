# Application Settings
APP_NAME="Meeting Minutes Management System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development/production
DEBUG=true
HOST="0.0.0.0"
PORT=8000

# Database Configuration - 使用するプロバイダーに応じて設定してください

# === Supabase PostgreSQL ===
# DATABASE_URL="postgresql+asyncpg://postgres.your-project:[YOUR-PASSWORD]@aws-0-ap-northeast-1.pooler.supabase.com:5432/postgres"

# === GCP Cloud SQL PostgreSQL ===
# 本番環境（Cloud Run）
DATABASE_URL="postgresql+asyncpg://meeting_user:[PASSWORD]@/meeting_minutes_db?host=/cloudsql/[CONNECTION_NAME]"
# ローカル開発（Cloud SQL Proxy経由）
# DATABASE_URL="postgresql+asyncpg://meeting_user:[PASSWORD]@localhost:5432/meeting_minutes_db"

# === ローカル PostgreSQL ===
# DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/meeting_minutes_db"

# === その他のPostgreSQLプロバイダー ===
# DATABASE_URL="postgresql+asyncpg://user:password@hostname:5432/dbname"

DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID="your-gcp-project-id"
GOOGLE_SERVICE_ACCOUNT_FILE="service_account.json"

# Available Google Accounts (comma-separated)
AVAILABLE_ACCOUNTS="masuda.g@bandq.jp,narita.k@bandq.jp,ito.t@bandq.jp"

# Gemini API Configuration
GEMINI_API_KEY="your-gemini-api-key"
# or
GOOGLE_API_KEY="your-google-api-key"
GEMINI_MODEL="gemini-2.5-pro"
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_OUTPUT_TOKENS=8192

# Meeting Collection Settings
TARGET_FOLDER_KEYWORD="Meet Recordings"
CASE_SENSITIVE_SEARCH=false
EXPORT_MIME_TYPE="text/plain"
MAX_TEXT_PREVIEW=600

# Processing Configuration
MAX_WORKERS=3
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1.0

# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG/INFO/WARNING/ERROR/CRITICAL
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# CORS Settings
CORS_ORIGINS="*"  # For production, specify actual origins
CORS_CREDENTIALS=true
CORS_METHODS="*"
CORS_HEADERS="*"

# Security (if needed)
SECRET_KEY="your-secret-key-for-jwt-tokens"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional: Task Queue Configuration
# REDIS_URL="redis://localhost:6379/0"
# CELERY_BROKER_URL="redis://localhost:6379/0"
# CELERY_RESULT_BACKEND="redis://localhost:6379/0"